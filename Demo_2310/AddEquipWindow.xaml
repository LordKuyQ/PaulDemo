<Window x:Class="Demo_2310.AddEquipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_2310"
        mc:Ignorable="d"
        Title="Окно оборудования" Height="900" Width="450">
    <StackPanel>
        <Button x:Name="BackButton" Content="Back" Click="Back" Margin="10,10,400,10"/>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Add equip" FontSize="35" HorizontalAlignment="Center"/>
            <StackPanel Name="IdEditPanel" Visibility="Collapsed">
                <TextBlock Text="Id" FontSize="25"/>
                <TextBlock Name="TBId" FontSize="20"/>
            </StackPanel>
            <TextBlock Text="Articul" FontSize="25"/>
            <TextBox x:Name="Articul" FontSize="20"/>
            <TextBlock Text="Name" FontSize="25"/>
            <TextBox x:Name="Name" FontSize="20"/>
            <TextBlock Text="Unit of Rent" FontSize="25" />
            <TextBox x:Name="UnitRent" FontSize="20"/>
            <TextBlock Text="Price of Rent" FontSize="25" />
            <TextBox x:Name="CostRent" FontSize="20"/>

            <TextBlock Text="Provider" FontSize="25" />
            <ComboBox x:Name="Provider" FontSize="20" DisplayMemberPath="Provider1"/>

            <TextBlock Text="Producer" FontSize="25" />
            <ComboBox x:Name="Producer" FontSize="20" DisplayMemberPath="Producer1"/>

            <TextBlock Text="Type of Equipment" FontSize="25" />
            <ComboBox x:Name="TypeEquipment" FontSize="20" DisplayMemberPath="Type"/>

            <TextBlock Text="Discount" FontSize="25" />
            <TextBox x:Name="Discount" FontSize="20"/>
            <TextBlock Text="Count on storage" FontSize="25" />
            <TextBox x:Name="CountFree" FontSize="20"/>
            <TextBlock Text="Description" FontSize="25" />
            <TextBox x:Name="Description" FontSize="20"/>
            
            <Button x:Name="AddButton" Content="Add" Click="AddClick"/>
        </StackPanel>
    </StackPanel>
</Window>
