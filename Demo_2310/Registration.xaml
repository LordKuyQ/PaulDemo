<Window x:Class="Demo_2310.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_2310"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="450">
    <StackPanel>
        <Button x:Name="BackButton" Content="Back" Click="Back" Margin="10,10,400,10"/>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Registration" FontSize="35" HorizontalAlignment="Center"/>
            <TextBlock Text="Fio" FontSize="25"/>
            <TextBox x:Name="Fio" FontSize="20"/>
            <TextBlock Text="Login" FontSize="25"/>
            <TextBox x:Name="Login" FontSize="20"/>
            <TextBlock  FontSize="25" Text="Password"/>
            <TextBox x:Name="Password" FontSize="20"/>
            <Button x:Name="RegisterButton" Content="Register" Click="RegisterClick"/>
        </StackPanel>
    </StackPanel>
</Window>
